{
  "name": "readFile",
  "ns": "fs",
  "title": "fs readFile",
  "description": "fs readFile",
  "phrases": {
    "active": "Reading file {{input.filename}} ({{input.options.encoding}}, {{input.options.flag}})"
  },
  "require": {
    "fs": "builtin"
  },
  "ports": {
    "input": {
      "filename": {
        "title": "Filename",
        "type": "string",
        "required": true
      },
      "encoding": {
        "title": "Encoding",
        "type": "string",
        "default": "utf-8"
      },
      "flag": {
        "title": "Flag",
        "type": "string",
        "default": "r"
      }
    },
    "output": {
      "error": {
        "type": "object"
      },
      "data": {
        "type": "object"
      }
    }
  }
}
