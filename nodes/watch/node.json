{
  "name": "watch",
  "ns": "fs",
  "description": "Watches a file",
  "phrases": {
    "active": "Watching file {{input.file}}"
  },
  "require": {
    "fs": "builtin"
  },
  "ports": {
    "input": {
      "file": {
        "type": "string",
        "title": "Filename",
        "required": true
      },
      "persistent": {
        "type": "boolean",
        "title": "Persistent",
        "description": "Whether it should keep watching",
        "default": false
      }
    },
    "output": {
      "event": {
        "title": "Event",
        "type": "string"
      },
      "file": {
        "title": "Filename",
        "type": "string"
      }
    }
  }
}
