{
  "name": "truncate",
  "ns": "fs",
  "description": "fs truncate",
  "phrases": {
    "active": "Truncating file {{input.path}} to {{input.len}}"
  },
  "require": {
    "fs": "builtin"
  },
  "ports": {
    "input": {
      "path": {
        "type": "string"
      },
      "len": {
        "type": "integer"
      }
    },
    "output": {
      "exception": {
        "title": "Exception",
        "type": "object"
      }
    }
  }
}
