{
  "name": "symlink",
  "ns": "fs",
  "description": "fs symlink",
  "phrases": {
    "active": "Creating symbolic link from {{input.srcpath}} to {{input.dstpath}}"
  },
  "require": {
    "fs": "builtin"
  },
  "ports": {
    "input": {
      "srcpath": {
        "title": "Source path",
        "type": "string"
      },
      "dstpath": {
        "title": "Destination path",
        "type": "string"
      },
      "type": {
        "enum": ["file","dir","junction"],
        "default": "file"
      }
    },
    "output": {
      "exception": {
        "title": "Exception",
        "type": "object"
      },
      "event:complete": {
        "title": "Complete",
        "type": "object"
      }
    }
  }
}
