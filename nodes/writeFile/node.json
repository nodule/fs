{
  "name": "writeFile",
  "ns": "fs",
  "description": "fs writeFile",
  "phrases": {
    "active": "Writing file {{input.filename}}"
  },
  "require": {
    "fs": "builtin"
  },
  "ports": {
    "input": {
      "filename": {
        "type": "string"
      },
      "data": {
        "type": "string"
      },
      "options": {
        "title": "Options",
        "type": "object",
        "properties": {
          "encoding": {
            "title": "Encoding",
            "type": "string",
            "default": "utf-8"
          },
          "mode": {
            "title": "Mode",
            "type": "number",
            "default": 438
          },
          "flag": {
            "title": "Flag",
            "type": "string",
            "default": "w" 
          }
        }
      }
    },
    "output": {
      "error": {
        "title": "Error",
        "type": "object"
      },
      "event:complete": {
        "title": "Complete",
        "type": "object"
      }
    }
  }
}
